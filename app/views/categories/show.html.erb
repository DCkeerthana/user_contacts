<h2><%= @category.name %></h2>

<%= link_to "Edit", edit_category_path(@category.id) %> | <%= link_to "Delete", category_path(@category.id), method: :delete, data: {confirm: "Are you sure you want to delete this category"} %><br/>
<table>
    <thead>
        <tr>
		   <th>sl.no </th>
		   <th> Name</th>
		   <th> Email</th>
		   <th> Mobile</th>
		   <th> User</th>
		</tr>
	</thead>
	<tbody>
	    <% @contacts.each_with_index do |contact,index|%>
	    <tr>
	    <td><%= index+1 %></td>
	    <td><%=link_to contact.name, contact_path(contact.id)%></td>
	    <td><%=contact.email %></td>
	    <td><%=contact.mobile %></td>
	    <td><%=contact.user.user_name %></td>	
	    </tr>
	    <% end %>	
	</tbody>
</table>

