<h2>Listing contacts</h2>
<% if @contacts.empty? %>
<p> NO CONTACTS FOUND</p>
<% else %>

<table>
	<thead>
		<tr>
			<th>NAME</th>
			<th>EMAIL</th>
			<th>MOBILE</th>
			<th>CATEGORY</th>
		</tr>
	</thead>
	<tbody>
		<% @contacts.each do |contact|%>
		<tr>
		<td><%= link_to contact.name, contact_path(contact.id) %></td>
		<td><%=contact.email %></td>
		<td><%=contact.mobile %></td>
		<td><%=contact.category.name %></td>
		</tr>
		<% end %>
	</tbody>
</table></br>
<% end %>
<% if (user_signed_in?) && (can? :create, Contact.new) %>
<%= link_to "Add contact", new_contact_path %>
<% end %> 