<%=form_for @contact do |f|%>

<% if @contact.errors.any? %>
<%=@contact.errors.full_messages do |error| %>
<ul>
<li><%= error %></li>
</ul>
<% end %>
<% end %>

</br><div class="form-group" >
<label for="contact_category_id"> Category: </label>
 <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Selcet Category", class: "form-control" %>
</div></br>

<div class= "form-group">
<%=f.label :name%>
<%= f.text_field :name, class: "form-control", id: :contact_name  %>
</div></br>



<div class= "form-group"  >
<%=f.label :email%>
<%= f.text_field :email, id: :contact_email, class: "form-control" %>
</div></br>

<div class= "form-group" %>
<%=f.label :mobile %>
<%= f.text_field :mobile, id: :contact_mobile, class: "form-control"%>
</div></br>

<div class="actions">
    <%= f.submit  %>
  </div></br>
<% end %>


